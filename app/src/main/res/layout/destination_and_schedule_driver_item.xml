<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView style="@style/ElevatedCardViewStyle">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/default_screen_horizontal_space"
            android:paddingVertical="@dimen/default_screen_vertical_space"
            app:divider="@drawable/divider_default_space"
            app:showDividers="middle">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/imgLocationFrom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_4sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/ic_location_from" />

                <ImageView
                    android:id="@+id/imgLocationWhereTo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_2sdp"
                    app:layout_constraintEnd_toEndOf="@+id/imgLocationFrom"
                    app:layout_constraintStart_toStartOf="@+id/imgLocationFrom"
                    app:layout_constraintTop_toTopOf="@+id/ltLocationWhereTo"
                    app:srcCompat="@drawable/ic_location_where_to" />

                <View
                    android:id="@+id/imageView7"
                    android:layout_width="1dp"
                    android:layout_height="0dp"
                    android:background="@drawable/bg_dotted_line_vertical"
                    android:layerType="none"
                    app:layout_constraintBottom_toTopOf="@+id/imgLocationWhereTo"
                    app:layout_constraintEnd_toEndOf="@+id/imgLocationFrom"
                    app:layout_constraintStart_toStartOf="@+id/imgLocationFrom"
                    app:layout_constraintTop_toBottomOf="@+id/imgLocationFrom" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ltLocationFrom"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/field_start_margin"
                    app:divider="@drawable/divider_section_space"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgLocationFrom"
                    app:layout_constraintTop_toTopOf="parent"
                    app:showDividers="middle">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/HeadLine_6"
                        android:text="@string/from" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tlStartingLocation"
                        style="@style/TextInputLayoutStyle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etStartingLocation"
                            style="@style/TextInputEditTextStyle"
                            android:focusable="false"
                            android:hint="@string/enter_starting_location"
                            android:inputType="textPostalAddress|textCapWords" />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ltLocationWhereTo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/default_space"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/field_start_margin"
                    app:divider="@drawable/divider_section_space"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/imgLocationWhereTo"
                    app:layout_constraintTop_toBottomOf="@+id/ltLocationFrom"
                    app:showDividers="middle"
                    tools:ignore="RtlSymmetry">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/HeadLine_6"
                        android:text="@string/where_to" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tlDestinationLocation"
                        style="@style/TextInputLayoutStyle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etDestinationLocation"
                            style="@style/TextInputEditTextStyle"
                            android:focusable="false"
                            android:hint="@string/enter_destination_location"
                            android:inputType="textPostalAddress|textCapWords" />

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:divider="@drawable/divider_section_space"
                app:showDividers="middle">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/HeadLine_6"
                    android:text="@string/choose_the_date_of_the_trip" />

                <CalendarView
                    android:id="@+id/calendarView"
                    style="@style/DatePickerTheme"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:divider="@drawable/divider_section_space"
                app:showDividers="middle">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/HeadLine_6"
                    android:text="@string/specify_the_departure_time" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/field_height">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/ltTime"
                        style="@style/TextInputLayoutStyle"
                        android:layout_centerVertical="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/etTime"
                            style="@style/TextInputEditTextStyle"
                            android:enabled="false"
                            android:focusable="false"
                            android:hint="@string/time"
                            android:visibility="gone"
                            android:inputType="time" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvTime"
                        style="@style/HeadLine_6"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="false"
                        android:layout_centerVertical="true"
                        android:layout_marginStart="@dimen/section_space"
                        android:background="@drawable/secondary_rounded_box"
                        android:paddingHorizontal="@dimen/default_space"
                        android:paddingVertical="@dimen/default_screen_vertical_space"
                        tools:text="03:00 AM" />

                </RelativeLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

</layout>