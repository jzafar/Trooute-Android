<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:divider="@drawable/divider_section_space"
        app:showDividers="middle">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:padding="@dimen/imagepicker_padding_small"
            app:divider="@drawable/divider_section_space"
            app:showDividers="middle">

            <com.google.android.material.imageview.ShapeableImageView
                style="@style/CircleProfileImageStyle"
                android:id="@+id/userImage"
                android:layout_width="@dimen/_65sdp"
                android:layout_height="@dimen/_65sdp"
                app:srcCompat="@drawable/ic_notification"
                app:strokeColor="@color/black"
                app:strokeWidth="1dp"
                android:padding="1dp"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:divider="@drawable/divider_section_space"
                app:showDividers="middle">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:divider="@drawable/divider_sub_section_space"
                    app:showDividers="middle">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUserName"
                        style="@style/HeadLine_6"
                        android:layout_width="wrap_content"
                        android:maxLines="2"
                        tools:text="" />

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/Body_6"
                        android:layout_width="wrap_content"
                        android:id="@+id/tvAvgRating"
                        android:drawableStart="@drawable/ic_star"
                        tools:text="Not Provided" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/Body_6"
                    tools:text=""
                    android:id="@+id/tvComment"
                    android:textColor="@color/on_primary_mirage_color" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

        <include layout="@layout/divider_item" />

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>