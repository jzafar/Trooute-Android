<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".presentation.ui.booking.BookingDetailActivity">

        <include
            android:id="@+id/includeAppBar"
            layout="@layout/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <androidx.core.widget.NestedScrollView
            android:id="@+id/ltRoot"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/default_screen_horizontal_space"
                android:paddingVertical="@dimen/default_screen_vertical_space"
                app:divider="@drawable/divider_default_space"
                app:showDividers="middle">

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/HeadLine_4"
                        android:paddingHorizontal="@dimen/section_space"
                        android:text="@string/booking_detail" />

                    <include
                        android:id="@+id/includeWaitingLayout"
                        layout="@layout/waiting_booking_detail_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="visible" />

                    <include
                        android:id="@+id/includeCancelledLayout"
                        layout="@layout/cancel_booking_detail_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/includeApprovedLayout"
                        layout="@layout/approved_booking_detail_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/includeConfirmedLayout"
                        layout="@layout/confirmed_booking_detail_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                    <include
                        android:id="@+id/includeCompletedLayout"
                        layout="@layout/completed_booking_detail_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ltUserSideReview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/HeadLine_4"
                        android:paddingHorizontal="@dimen/section_space"
                        android:text="@string/reviews" />

                    <include
                        android:id="@+id/includeUserSideReviewItemLayout"
                        layout="@layout/user_side_review_item" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ltDriverSidePassengers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/HeadLine_4"
                        android:paddingHorizontal="@dimen/section_space"
                        android:text="@string/passengers_details" />

                    <include
                        android:id="@+id/includeDriverSideUserDetailLayout"
                        layout="@layout/user_detail_item"/>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ltUserSideDriverDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/HeadLine_4"
                        android:paddingHorizontal="@dimen/section_space"
                        android:text="@string/driver_details" />

                    <include
                        android:id="@+id/includeUserDetailLayout"
                        layout="@layout/user_detail_item" />

                    <include
                        android:id="@+id/includeVehicleInfoLayout"
                        layout="@layout/vehicle_info_item" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ltUserSidePassengers"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingHorizontal="@dimen/section_space"
                        app:divider="@drawable/divider_section_space"
                        app:showDividers="middle">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/HeadLine_4"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:text="@string/passengers" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvUserSidePassengerSeatsAvailable"
                            style="@style/Body_6"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:background="@drawable/rounded_primary_light_text_view_bg"
                            android:paddingHorizontal="@dimen/_12sdp"
                            android:paddingVertical="@dimen/_3sdp"
                            android:textAlignment="center"
                            android:textColor="@color/primary_color"
                            tools:text="2 Seats Available" />

                    </androidx.appcompat.widget.LinearLayoutCompat>

                    <include
                        android:id="@+id/includePassengersInfoLayout"
                        layout="@layout/passengers_info_item" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ltUserSideDesignationSchedule"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/HeadLine_4"
                        android:paddingHorizontal="@dimen/section_space"
                        android:text="@string/destination_and_schedule" />

                    <include
                        android:id="@+id/includeDestinationAndScheduleLayout"
                        layout="@layout/destination_and_schedule_item" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ltUserSideTripDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/HeadLine_4"
                        android:paddingHorizontal="@dimen/section_space"
                        android:text="@string/trip_details" />

                    <include
                        android:id="@+id/includeUserSideTripDetails"
                        layout="@layout/trip_detail_item" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ltDriverSidePickupLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/HeadLine_4"
                        android:paddingHorizontal="@dimen/section_space"
                        android:text="@string/pickup_location" />

                    <include
                        android:id="@+id/includePickupLocationDetailLayout"
                        layout="@layout/pickup_location_detail" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.core.widget.NestedScrollView>

    </androidx.appcompat.widget.LinearLayoutCompat>

</layout>