<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardTripRoute"
        style="@style/ElevatedCardViewStyle">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="@dimen/default_space"
            app:divider="@drawable/divider_default_space"
            app:showDividers="middle">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:divider="@drawable/divider_section_space"
                app:showDividers="middle">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/HeadLine_6"
                    android:text="@string/pickup_location" />

                <com.google.android.material.textfield.TextInputLayout style="@style/TextInputLayoutStyle">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etPickUpLocation"
                        style="@style/TextInputEditTextStyle"
                        android:hint="@string/enter_pickup_location"
                        android:focusable="false"
                        android:inputType="textPostalAddress|textCapWords" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_space"
                android:orientation="vertical"
                app:divider="@drawable/divider_section_space"
                app:showDividers="middle">

                <androidx.appcompat.widget.AppCompatTextView
                    style="@style/HeadLine_6"
                    android:text="@string/other_relevant_details_about_the_trip" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/tlDestinationLocation"
                    style="@style/MultilineTextInputLayoutStyle"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/multiline_field_height"
                    android:gravity="top"
                    android:paddingTop="0dp">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etDestinationNote"
                        style="@style/MultilineTextInputEditTextStyle"
                        android:hint="@string/please_be_on_time_as_we_have_a_tight_schedule"
                        android:inputType="textMultiLine|textCapSentences" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </com.google.android.material.card.MaterialCardView>

</layout>