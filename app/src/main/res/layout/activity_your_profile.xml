<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:id="@+id/ltRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:fitsSystemWindows="true"
        tools:context=".presentation.ui.auth.YourProfileActivity">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/default_space"
            android:paddingVertical="@dimen/default_screen_vertical_space"
            app:divider="@drawable/divider_default_space"
            app:showDividers="middle"
            tools:ignore="ScrollViewSize">

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/HeadLine_2"
                android:layout_marginVertical="@dimen/auth_screen_top_space"
                android:text="@string/update_profile"
                android:textAlignment="center" />

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:divider="@drawable/divider_default_space"
                app:showDividers="middle">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgUserProfile"
                    style="@style/CircleProfileImageStyle"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_75sdp"
                    app:srcCompat="@drawable/profile_place_holder" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:divider="@drawable/divider_section_space"
                    app:showDividers="middle">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/HeadLine_7"
                        android:text="@string/full_name" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tlFullName"
                        style="@style/TextInputLayoutStyle">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/teFullName"
                            style="@style/TextInputEditTextStyle"
                            android:hint="@string/e_g_john_smith"
                            android:inputType="textPersonName|textCapWords" />
                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    app:divider="@drawable/divider_section_space"
                    app:showDividers="middle">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/HeadLine_7"
                        android:text="@string/phone_number" />

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/tlPhoneNumber"
                        style="@style/TextInputLayoutStyle">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            >

                            <com.fredporciuncula.phonemoji.PhonemojiFlagTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:textSize="16sp"
                                app:phonemoji_flagFor="@id/tePhoneNumber"
                                />

                            <com.fredporciuncula.phonemoji.PhonemojiTextInputEditText
                                android:id="@+id/tePhoneNumber"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="@string/your_phone_number_here"
                                android:inputType="phone"
                                />

                        </LinearLayout>

                    </com.google.android.material.textfield.TextInputLayout>

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnUpdate"
                    style="@style/PrimaryRoundedButton"
                    android:text="@string/update" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnUpdatePassword"
                    style="@style/SecondaryRoundedButton"
                    android:text="@string/update_password" />

            </androidx.appcompat.widget.LinearLayoutCompat>

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</layout>