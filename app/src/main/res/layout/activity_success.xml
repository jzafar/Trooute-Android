<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:context=".presentation.ui.main.SuccessActivity">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/default_screen_horizontal_space"
            android:paddingVertical="@dimen/default_screen_vertical_space"
            app:divider="@drawable/divider_default_space"
            app:showDividers="middle">

            <com.airbnb.lottie.LottieAnimationView
                style="@style/LottieAnimationViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                app:lottie_rawRes="@raw/done" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/HeadLine_5"
                android:text="@string/thanks_for_registration"
                android:textAlignment="center" />

            <androidx.appcompat.widget.AppCompatTextView
                style="@style/Body_6"
                android:text="@string/success_desc"
                android:textAlignment="center"
                android:textColor="@color/secondary_cadet_blue_color" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBackToHome"
                style="@style/PrimaryRoundedButton"
                android:text="@string/back_to_home" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </ScrollView>

</layout>