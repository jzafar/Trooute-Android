<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/ltRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.booking.BookNowActivity">

        <include
            android:id="@+id/includeAppBar"
            layout="@layout/app_bar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/includeAppBar"
            android:layout_above="@id/ltButtonSection"
            android:fillViewport="true"
            android:scrollbars="none">

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/default_screen_horizontal_space"
                android:paddingVertical="@dimen/default_screen_vertical_space"
                app:divider="@drawable/divider_default_space"
                app:showDividers="middle">

                <include
                    android:id="@+id/includeTripsItemLayout"
                    layout="@layout/rv_trips_item" />

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatTextView
                        style="@style/HeadLine_4"
                        android:paddingHorizontal="@dimen/section_space"
                        android:text="@string/pickup_location" />

                    <include
                        android:id="@+id/includePickupLocationItemLayout"
                        layout="@layout/pickup_location_item" />

                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            style="@style/HeadLine_4"
                            android:paddingHorizontal="@dimen/section_space"
                            android:text="@string/passengers" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvClear"
                            style="@style/Body_6"
                            android:layout_width="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:paddingHorizontal="@dimen/section_space"
                            android:text="@string/clear"
                            android:textColor="@color/primary_color" />

                    </RelativeLayout>

                    <include
                        android:id="@+id/includePassengersItemLayout"
                        layout="@layout/passengers_item" />

                </androidx.appcompat.widget.LinearLayoutCompat>

            </androidx.appcompat.widget.LinearLayoutCompat>

        </ScrollView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:id="@+id/ltButtonSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginHorizontal="@dimen/default_space"
            android:layout_marginVertical="@dimen/default_screen_vertical_space"
            android:background="@drawable/rounded_on_primary_mirage_background"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="@dimen/default_screen_horizontal_space"
            android:paddingVertical="@dimen/default_screen_vertical_space"
            app:divider="@drawable/divider_default_space"
            app:showDividers="middle">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTotalAmount"
                style="@style/HeadLine_3"
                android:layout_width="wrap_content"
                tools:text="â‚¬600"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnProceed"
                style="@style/PrimaryRoundedButton"
                android:text="@string/proceed" />

        </androidx.appcompat.widget.LinearLayoutCompat>

    </RelativeLayout>

</layout>